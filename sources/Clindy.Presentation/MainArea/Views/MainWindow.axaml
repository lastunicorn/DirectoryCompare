<Window
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:DustInTheWind.Clindy.Presentation.MainArea.ViewModels"
    xmlns:views1="clr-namespace:DustInTheWind.Clindy.Presentation.DuplicatesNavigatorArea.Views"
    xmlns:views2="clr-namespace:DustInTheWind.Clindy.Presentation.FileGroupDetailsArea.Views"

    x:Class="DustInTheWind.Clindy.Presentation.MainArea.Views.MainWindow"
    
    mc:Ignorable="d"
    d:DesignWidth="800"
    d:DesignHeight="450"
    x:DataType="viewModels:MainWindowViewModel"
    Icon="/Assets/avalonia-logo.ico"
    Title="{Binding Title}"
    WindowState="Maximized">

    <Design.DataContext>
        <viewModels:MainWindowViewModel />
    </Design.DataContext>

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="8" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Left -->

        <views1:DuplicatesNavigator
            DataContext="{Binding DuplicatesNavigatorViewModel}"/>
        
        <!-- Vertical Splitter -->

        <GridSplitter
            Grid.Column="1"
            Background="DarkSlateGray" />

        <!-- Right -->

        <Grid
            Grid.Column="2">

            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="8" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>

            <!-- Right-Top -->

            <views2:FileGroupControl
                Grid.Row="0"
                DataContext="{Binding FileGroupViewModel}"/>
            
            <!-- Horizontal Splitter -->

            <GridSplitter
                Grid.Row="1"
                Background="DarkSlateGray" />

            <!-- Right-Bottom -->

            <TextBlock
                Grid.Row="2"
                Text="Hello!"
                VerticalAlignment="Center"
                HorizontalAlignment="Center" />
        </Grid>

    </Grid>

</Window>