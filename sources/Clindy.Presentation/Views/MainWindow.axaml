<Window
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:DustInTheWind.Clindy.Presentation.Views"
    xmlns:viewModels="clr-namespace:DustInTheWind.Clindy.Presentation.ViewModels"

    x:Class="DustInTheWind.Clindy.Presentation.Views.MainWindow"
    
    mc:Ignorable="d"
    d:DesignWidth="800"
    d:DesignHeight="450"
    x:DataType="viewModels:MainWindowViewModel"
    Icon="/Assets/avalonia-logo.ico"
    Title="{Binding Title}">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <viewModels:MainWindowViewModel />
    </Design.DataContext>

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="8" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Left -->

        <views:DuplicatesNavigator
            DataContext="{Binding DuplicatesNavigatorViewModel}"/>
        
        <!-- Vertical Splitter -->

        <GridSplitter
            Grid.Column="1"
            Background="DarkSlateGray" />

        <!-- Right -->

        <Grid
            Grid.Column="2">

            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="8" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>

            <!-- Top -->

            <ListBox
                Grid.Row="0"
                ItemsSource="{Binding DuplicateFiles}">

                <ListBox.ItemTemplate>
                    <DataTemplate DataType="viewModels:DuplicateFilesListItem">
                        <DockPanel>
                            <Button
                                DockPanel.Dock="Right"
                                Content="Open"
                                Command="{Binding OpenCommand}" />

                            <TextBlock
                                Text="{Binding FilePath}"
                                VerticalAlignment="Center" />
                        </DockPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>

            </ListBox>

            <!-- Horizontal Splitter -->

            <GridSplitter
                Grid.Row="1"
                Background="DarkSlateGray" />

            <!-- Bottom -->

            <TextBlock
                Grid.Row="2"
                Text="Hello!"
                VerticalAlignment="Center"
                HorizontalAlignment="Center" />
        </Grid>

    </Grid>

</Window>