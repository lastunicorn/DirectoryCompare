<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:DustInTheWind.Clindy.Presentation.ViewModels"

    x:Class="DustInTheWind.Clindy.Presentation.Views.DuplicatesNavigator"

    mc:Ignorable="d"
    d:DesignWidth="800"
    d:DesignHeight="450"
    x:DataType="viewModels:DuplicatesNavigatorViewModel">

    <Design.DataContext>
        <viewModels:DuplicatesNavigatorViewModel />
    </Design.DataContext>

    <DockPanel>

        <TextBlock
            DockPanel.Dock="Bottom"
            Background="DarkSlateGray"
            Padding="10"
            Text="{Binding DuplicateGroupCount}" />

        <Grid>

            <ListBox
                IsVisible="{Binding !IsLoading}"
                ItemsSource="{Binding DuplicateGroups}"
                SelectedItem="{Binding SelectedDuplicateGroup}" />

            <TextBlock
                Text="Loading"
                IsVisible="{Binding IsLoading}"
                VerticalAlignment="Center"
                HorizontalAlignment="Center" />

        </Grid>

    </DockPanel>

</UserControl>