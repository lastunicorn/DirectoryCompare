<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:DustInTheWind.Clindy.Presentation.ViewModels"

    x:Class="DustInTheWind.Clindy.Presentation.Views.DuplicatesNavigator"

    mc:Ignorable="d"
    d:DesignWidth="800"
    d:DesignHeight="450"
    x:DataType="viewModels:DuplicatesNavigatorViewModel">

    <Design.DataContext>
        <viewModels:DuplicatesNavigatorViewModel />
    </Design.DataContext>

    <DockPanel>

        <Border
            DockPanel.Dock="Top"
            Background="DarkSlateGray"
            Padding="2">

            <StackPanel
                Orientation="Horizontal">

                <Button
                    Content="R"
                    Command="{Binding RefreshCommand}" />

            </StackPanel>

        </Border>

        <Border
            DockPanel.Dock="Bottom"
            Background="DarkSlateGray"
            Padding="10">

            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="8" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Text="Groups:" />

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="2"
                    Text="{Binding DuplicateGroupCount}" />

                <TextBlock
                    Grid.Row="2"
                    Grid.Column="0"
                    Text="Total Size:" />

                <TextBlock
                    Grid.Row="2"
                    Grid.Column="2"
                    Text="{Binding TotalSize}" />
            </Grid>

        </Border>

        <Grid>

            <ListBox
                IsVisible="{Binding !IsLoading}"
                ItemsSource="{Binding DuplicateGroups}"
                SelectedItem="{Binding SelectedDuplicateGroup}" />

            <TextBlock
                Text="Loading"
                IsVisible="{Binding IsLoading}"
                VerticalAlignment="Center"
                HorizontalAlignment="Center" />

        </Grid>

    </DockPanel>

</UserControl>