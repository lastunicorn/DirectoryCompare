<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:DustInTheWind.Clindy.Presentation.ViewModels"

    x:Class="DustInTheWind.Clindy.Presentation.Views.DuplicatesNavigatorHeader"
    
    mc:Ignorable="d"
    d:DesignWidth="800"
    d:DesignHeight="450"
    x:DataType="viewModels:DuplicatesNavigatorHeaderViewModel">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/RefreshIconStyles.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border
        Background="DarkSlateGray"
        Padding="4">

        <StackPanel
            Orientation="Horizontal">

            <Button
                Width="40"
                Height="40"
                Command="{Binding RefreshCommand}">

                <Viewbox>
                    <Path
                        Data="{StaticResource RefreshGeometry}"
                        Fill="DarkGray" />
                </Viewbox>

            </Button>

        </StackPanel>

    </Border>
    
</UserControl>